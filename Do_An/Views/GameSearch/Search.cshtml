
@model IEnumerable<Do_An.Models.Game_Category>

@using Do_An.Models

@{
    ViewBag.Title = "Search";
}
<div class="content">
    <div class="content_top">
        <div class="collection_text">Keyword search results: @ViewBag.KeyWord</div>
    </div>
</div>
<div class="layout_padding gallery_section">
    <div class="container">
        <div class="row">

            <div class="see-all">
                <a href='@Url.Action("Index","Top")'>See All Games</a>
            </div>

            <div class="clear"></div>

            <div class="section group">
                @foreach (var item in Model)
                {
                    <div class="col-sm-4">
                        <div class="best_shoes">
                            <p class="best_text see-all">
                                @Html.ActionLink(@item.TenGame, "DetailsGameList", new { id = item.MaGame })
                            </p>
                            @*<p>@Html.ActionLink(@item.Category.TenHangMuc, "Top", new { Id = item.MaCate }, null)</p>*@
                        </div>
                        <div class="shoes_icon">
                            <a href="@Url.Action("DetailsGameList", new { id = @item.MaGame })">
                                <img src="~/images/@item.AnhBia" class="img-responsive" alt="Image" />
                            </a>
                        </div>
                        
                        <div class="add_buy">
                            @*<h4>@Html.ActionLink(item.TenHangMuc, "Index", "Top", new { cateId = @item.MaGame }, null)</h4>*@
                            <button class="buy_bt add">$@item.GiaBan Buy Now</button>

                            <button class="buy_bt add">@Html.ActionLink("Add to Wishlist", "OrderNow", "ShopCart", new { Id = item.MaGame }, null)</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>