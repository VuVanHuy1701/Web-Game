@using Do_An.Models;

@{
    ViewBag.Title = "Wish List";
   
}
    
<div class="collection_text">Wish List</div>
<div class="layout_padding gallery_section">
    <div class="container">
        <div class="row">
            <table class="table table-borderless table-borderless">
                <tr>
                    <td>pic</td>
                    <td>name</td>
                    <td>Price</td>
                    <td>RM</td>
                </tr>

                @foreach (var cart in (List<Cart>)Session["Cart"])
                {
                    

                    <tr>
                        <td><img src="~/images/@cart.Game.AnhBia" class="img-responsive" alt="Image" style="width:130px;height:190px;" /></td>
                        <td>@cart.Game.TenGame</td>
                        <td>@cart.Game.GiaBan$</td>
                        <td>
                            @Html.ActionLink("Delete", "RemoveItem", "ShopCart", new { Id = cart.Game.MaGame },
                            new { onclick = "return confirm ('Are you want to delete?');" })

                            @Html.ActionLink("Buy", "Index", "CheckOut")
                        </td>
                    </tr>
                }
                <tr>

                    @{
                        List<Cart> temp = (List<Cart>)Session["Cart"];
                        var total = temp.Sum(x => x.Quantity * x.Game.GiaBan);
                    }
                    <td colspan="2">@Html.ActionLink("Back To List Games", "Index", "Top")</td>
                    <td colspan="2">
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>